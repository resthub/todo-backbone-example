      <div class="todo {{ifequalsinline model.done true "done"}}">
        <div class="display">
          <input class="check" type="checkbox" {{ifinline model.done "checked=\"checked\""}} />
          <div class="todo-content">{{model.content}}</div>
          <span class="todo-destroy"></span>
        </div>
        <div class="edit">
          <input class="todo-input" type="text" value="{{model.content}}" />
        </div>
      </div>
